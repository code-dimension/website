---
import Layout from "../layouts/Layout.astro";
import Banner from "../partials/home/Banner.astro";
import Feedback from "../partials/home/Feedback.astro";
import Newsletter from "../partials/home/Newsletter.astro";
import ExplainingWhy from "../partials/home/ExplainingWhy.astro";
import Why from "../partials/home/Why.astro";
import Youtube from "../partials/home/Youtube.astro";
---

<Layout>
  <main
    class="bg-gradient-to-b from-lightDarkRedAlpha03 from-20% via-lightDarkBlueAlpha03 via-30% to-darkBlue to-70%"
  >
    <Banner />
    <Why />
    <ExplainingWhy />
    <section class="pt-32">
      <Youtube />
    </section>
    <section class="lg:pt-24">
      <Feedback />
    </section>
    <section class="pt-32">
      <Newsletter />
    </section>
  </main>
</Layout>

<style lang="scss">
  .gradient-top-to-bottom {
    background: linear-gradient(180deg, #03020f 0%, #0c073d 100%);
  }

  .g2 {
    width: 100%;
    height: 100%;
    background: linear-gradient(0deg, #03020f 0%, #0c073d 100%);
  }
</style>
