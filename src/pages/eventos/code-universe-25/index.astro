---
import CourseLayout from "@layouts/CourseLayout.astro";
import AddAtendeeModal from "@partials/shared/add-atendee-modal/add-atendee-modal.astro";
import ContentContainer from "@shared/containers/ContentContainer.astro";
import { Image } from "astro:assets";
import Cube from "./assets/code-universe-25.png";

const layoutProps = {
  title: "Code Universe 25",
  description:
    "Participe do Code Universe 25 e descubra como construir AGORA a carreira Angular sólida que o mercado vai querer em 2026. Torne-se um profissional de destaque.",
  url: Astro.url.href,
  image: Astro.url.origin + "/images/events/code-universe-25/code-universe-25-banner-image.jpg",
};
---

<CourseLayout {...layoutProps}>
  <div class="relative">
    <div
      class="absolute top-0 left-0 w-full h-full opacity-10 bg-[url(/images/home/code-banner-bg-1000px.png)] bg-repeat-space"
    >
    </div>

    <ContentContainer>
      <div class="h-[calc(100vh_-_105px)] xl:h-[calc(100vh_-_90px)] flex flex-col justify-center relative -mt-6">
        <div class="flex justify-center xl:justify-start z-20">
          <div class="w-full max-w-[630px] flex flex-col justify-center text-center xl:text-start">
            <h1
              class="text-4xl sm:text-6xl font-bold bg-gradient-to-br from-indigo-500 to-stone-900 bg-clip-text text-transparent"
            >
              Code Universe 25
            </h1>

            <p class="hero-description pt-10 text-black">
              O mercado não vai esperar. No Code Universe 25, vamos revelar como construir AGORA a carreira Angular
              sólida que todos vão querer em 2026.
            </p>

            <p class="hero-description pb-10 pt-4 text-black">
              Quer ser um profissional de destaque? Você precisa estar aqui.
            </p>

            <div class="flex justify-center xl:justify-start w-full xl:max-w-[350px] gap-4 mb-8">
              <div>
                <i class="bi bi-calendar-check"></i>
                27/11 às 19h
              </div>
              <div>
                <i class="bi bi-youtube"></i>
                AO VIVO NO YOUTUBE
              </div>
            </div>

            <div class="flex w-full justify-center xl:justify-start">
              <button id="add-atendee" class="btn btn-primary w-full max-w-[300px]">Quero participar!</button>
            </div>
          </div>
        </div>

        <Image
          src={Cube}
          alt="Cubo"
          class="hidden xl:block xl:max-w-[600px] 3xl:max-w-[650px] absolute w-full xl:opacity-100 right-0 3xl:-right-20"
        />
      </div>
    </ContentContainer>
  </div>

  <AddAtendeeModal
    mailingListId="1098078"
    btnSelector="#add-atendee"
    redirectUrl="/eventos/code-universe-25/obrigado"
  />
</CourseLayout>
