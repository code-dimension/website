---
import Layout from "../../layouts/Layout.astro";
import ContentContainer from "@shared/containers/ContentContainer.astro";
import MailchimpForm from "@shared/forms/mailchimp-form.astro";
import WaitingList from "@partials/testes-automatizados/waiting-list.astro";
import TechList from "@partials/testes-automatizados/tech-list.astro";
import Instructor from "@partials/testes-automatizados/instructor.astro";
import FeatureList from "@partials/testes-automatizados/feature-list.astro";
import Details from "@partials/testes-automatizados/details.astro";
import Modules from "@partials/testes-automatizados/modules.astro";
import Prices from "@partials/testes-automatizados/prices.astro";

const layoutProps = {
  title: "Curso Testes Automatizados com Angular",
  description:
    "Aprenda a criar testes eficientes de verdade com Angular e torne-se um profissional altamente requisitado no mercado!",
  url: Astro.url.href,
  image:
    Astro.url.origin +
    "/images/courses/testes-automatizados/og-curso-testes-automatizados.png",
};
---

<Layout {...layoutProps}>
  <ContentContainer>
    <div
      class="h-[calc(100vh_-_105px)] xl:h-[calc(100vh_-_90px)] flex flex-col justify-center relative -mt-6"
    >
      <div class="flex justify-center xl:justify-start z-20">
        <div
          class="w-full max-w-[630px] flex flex-col justify-center text-center xl:text-start"
        >
          <h1 class="text-5xl font-bold">
            Domine Testes Automatizados com <span class="angular-font-color"
              >Angular</span
            >
          </h1>

          <p class="text-xl py-16 xl:py-10 text-black">
            Aprenda a criar testes eficientes de verdade e torne-se um
            profissional altamente requisitado no mercado!
          </p>

          <MailchimpForm submitBtnLabel="Entrar na lista de espera" />
        </div>
      </div>
      <img
        src="/images/courses/testes-automatizados/banner-robot.png"
        class="max-w-[650px] absolute w-full opacity-10 xl:opacity-100 xl:right-0"
      />
    </div>
  </ContentContainer>

  <section class="py-16 bg-gray">
    <FeatureList />
  </section>

  <section class="py-16">
    <Details />
  </section>

  <section class="py-16 bg-gray">
    <Modules />
  </section>

  <section class="py-16">
    <TechList />
  </section>

  <section class="py-16 bg-gray">
    <Instructor />
  </section>

  <section class="py-16">
    <Prices />
  </section>

</Layout>
