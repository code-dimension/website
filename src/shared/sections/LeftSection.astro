---
const { imageUrl, imageAltText, title, text } = Astro.props;
---

<div class="flex mt-14 justify-center">
  <div class="flex flex-col items-center max-w-[1080px] xl:flex-row">
    <div class="flex justify-start basis-4/12">
      <img
        class="w-[250px]"
        src={imageUrl}
        alt={imageAltText}
      />
    </div>

    <div class="flex flex-col text-center mt-8 xl:mt-0 xl:text-start xl:justify-center xl:basis-8/12">
      <h3 class="text-[24px] font-bold text-light">
        <slot name="title" />
      </h3>

      <p class="text-[18px] leading-relaxed text-light mt-8">
        <slot name="text" />
      </p>
    </div>
  </div>
</div>
