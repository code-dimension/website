---
const { imageUrl, imageAltText } = Astro.props;
---

<div class="flex mt-14 justify-center">
  <div class="flex flex-col max-w-[1080px] xl:flex-row">
    <div class="flex flex-col order-2 mt-8 xl:mt-0 xl:order-1 justify-center xl:basis-8/12">
      <h3 class="text-[24px] font-bold text-center text-light xl:text-start">
        <slot name="title" />
      </h3>

      <p class="text-[18px] text-center leading-relaxed text-light mt-8 xl:text-start">
        <slot name="text" />
      </p>
    </div>

    <div class="flex justify-center order-1 xl:justify-end xl:order-2 xl:basis-4/12">
      <img
        class="w-[250px]"
        src={imageUrl}
        alt={imageAltText}
      />
    </div>
  </div>
</div>