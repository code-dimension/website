---
import ContentContainer from "../../shared/containers/ContentContainer.astro";
---

<div class="w-full glass-it sticky top-0 border-bottom">
  <ContentContainer>
    <div class="py-4 flex items-center">
      <img
        src={"images/logo.svg"}
        alt="Code Dimension Logo"
        class="w-[50px]"
      />

      <nav class="px-8">
        <a class="link" href="/">Home</a>
        <a class="link" href="/podimension">Podimension</a>
        <a class="link" href="sobre-a-code">Sobre a Code</a>
        <a class="link" href="blog.codedimension.com.br">Nosso Blog</a>
      </nav>
    </div>
  </ContentContainer>
</div>

<style lang="scss">
  .link {
      font-family: 'Inter';
      color: #fff;
      font-size: 16px;
      margin  : 0 16px;

      &:hover {
        border-bottom: 1px solid #fff;
        padding-bottom: 8px;
      }
  }
</style>
