---
interface Props {
  items: string[];
  type: "error" | "check" | "star" | "plus";
  cssClass?: string;
}

const { items, cssClass, type } = Astro.props;

const iconsClasses = {
  error: "bi-x-lg",
  check: "bi-check-lg",
  star: "bi-star-fill",
  plus: "bi-plus",
};

const iconColors = {
  error: "text-error",
  check: "text-primary",
  star: "text-warning",
};

const icon = iconsClasses[type] || iconsClasses.check;
const iconColor = iconColors[type] || iconColors.check;
---

<div class={`flex flex-col items-center xl:items-start space-y-4 ${cssClass}`}>
  {
    items.map((text: string) => (
      <div class="flex">
        <i class={`${icon} ${iconColor} text-xl`} />
        <div class="ml-2" set:html={text} />
      </div>
    ))
  }
</div>
