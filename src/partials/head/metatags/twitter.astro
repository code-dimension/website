---
import { siteConfig } from "@site-config";

const { url, title, description, image } = Astro.props;
---

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={url || siteConfig.url} />
<meta property="twitter:title" content={title || siteConfig.title} />
<meta property="twitter:description" content={description ||  siteConfig.description} />
<meta property="twitter:image" content={image || siteConfig.socialImage} />
