---
import Styles from "./styles/Styles.astro";
import BasicMetaTag from "./metatags/basic.astro";
import OpenGraphMetaTag from "./metatags/open-graph.astro";
import TwitterMetaTag from "./metatags/twitter.astro";
import FaviconMetaTag from "./metatags/favicon.astro";
import GA from "./ga/ga.astro";
import GTM from "./gtm/gtm.astro";

const { title } = Astro.props;
---

<head>
  <BasicMetaTag title={title} />
  <OpenGraphMetaTag />
  <TwitterMetaTag />
  <FaviconMetaTag />

  <GA />
  <GTM />

  <link rel="manifest" href="/site.webmanifest" />

  <Styles />
</head>
