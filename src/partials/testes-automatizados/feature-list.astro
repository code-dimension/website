---
import ContentContainer from "@shared/containers/ContentContainer.astro";
import { features } from "./features-data";
import Feature from "./feature.astro";
---

<ContentContainer>
  <div class="flex flex-col items-center">
    <div class="flex justify-center">
      <h2 class="text-4xl font-bold text-center">
        Confira o que você aprenderá no curso! 👇🏽
      </h2>
    </div>

    <div class="w-full max-w-[900px] mt-16">
      <div class="w-full max-w-[900px]">
        {
          features.map(
            ({
              imageUrl,
              imageAlt,
              title,
              description,
            }, index) => { 
              const orientation = index % 2 === 0 ? "left" : "right";
              
              return (<div class="my-16">
                <Feature
                  orientation={orientation}
                  imageUrl={imageUrl}
                  imageAlt={imageAlt}
                >
                  <Fragment slot="title">{title}</Fragment>
                  <Fragment slot="description">{description}</Fragment>
                </Feature>
              </div>)
            
            }
          )
        }
      </div>

      <div class="flex justify-center mt-16">
        <h2 class="text-4xl font-bold text-center">E muito mais! 🤩</h2>
      </div>
    </div>
  </div>
</ContentContainer>
